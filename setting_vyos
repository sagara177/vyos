#!/usr/bin/expect
spawn telnet localhost 3355
set timeout 120
expect "vyos login:"
send "vyos\r"
expect "Password:"
send "vyos\r"
expect "*$*"
send "configure\n"
expect "*#*"
send "set interfaces ethernet eth0 address dhcp\r"
expect "*#*"
send "set service ssh\r"
expect "*#*"
send "commit\r"
expect "*#*"
send "save\r"
expect "*#*"
send "exit\r"
expect "*$*"
send "sudo su\r"
expect "*#*"
send "rm -f ~/.bash_history ; history -c ; halt ; history -c\r"
expect "*reboot: Power down*"
